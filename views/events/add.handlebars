<div class="container" style="padding-top: 20px;">
    <h3 class="center-align">Add a new event</h3>
    <form action="/events/add" method="post">
        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <input class="form-control" id="eventTitle" type="text" name="eventTitle" value="{{eventTitle}}">
                    <label for="eventTitle">Title</label>
                </div>
            </div>
            <div class="col s6">
                <div class="input-field">
                    <select name="eventType">
                        <option value="" disabled selected>Select Options</option>
                        <option value="Academic">Academic</option>
                        <option value="Cultural">Cultural</option>
                        <option value="Sports">Sports</option>
                        <option value="Others">Others</option>
                    </select>
                    <label>Event type</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <input type="text" id="eventDate" class="datepicker" name="eventDate" value="{{eventDate}}">
                    <label for="eventDate">Choose a Date</label>
                </div>
            </div>
            <div class="col s6">
                <div>
                    <input type="text" id="eventTime" class="timepicker" name="eventTime" value="{{eventTime}}">
                    <label for="time">Choose a Time</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <input id="eventVenue" type="text" name="eventVenue" value="{{eventVenue}}">
                    <label for="eventVenue">Venue</label>
                </div>
            </div>
            <div class="col s6">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Upload Poster</span>
                        <input type="file" id="poster" name="poster">
                    </div>
                    <div class="file-path-wrapper">
                        <input type="text" class="file-path">
                    </div>
                </div>
            </div>
        </div>
        <div class="input-field">
            <textarea class="materialize-textarea" id="eventDescription" name="eventDescription">{{eventDescription}}</textarea>
            <label for="eventDescription">Event Description</label>
        </div>
        <div class="row right-align">
            <button type="reset" class="btn btn-large pink lighten-3 btn-flat">Reset</button>
            <button type="submit" class="btn btn-large green waves-effect waves-light">Create</button>
        </div>
    </form>
</div>

{{#if user}}
<div class="fixed-action-btn">
    <a class="btn-floating btn-large blue darken-4">
        <i class="material-icons">settings</i>
    </a>
    <ul>
        <li>
            <a class="btn-floating teal lighten-2" href="/events/myevents">
                <i class="material-icons">view_list</i>
            </a>
        </li>
        <li>
            <a class="btn-floating green" href="/events/add">
                <i class="material-icons">add</i>
            </a>
        </li>
    </ul>
</div>
{{else}} {{/if}}