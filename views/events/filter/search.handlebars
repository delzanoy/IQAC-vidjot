<div class="container" style="margin-top: 50px;">
    <h3 class="center-align">Search here</h3>
    <form action="/events/search" method="GET">
        <div class="row">
            <div class="col s6">
                <div class="input-field">
                    <input type="text" id="query" name="query" value="{{query}}">
                    <label for="query">Search</label>
                </div>
            </div>
            <div class="col s6">
                <div class="input-field">
                    <button type="submit" class="btn btn-large green waves-effect waves-light">Search</button>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        {{#each events}}
        <div class="col s12 m4">
            <div class="card small hoverable">
                <div class="card-image waves-effect waves-light waves-block">
                    <img class="activator" src="img/img4.jpg">
                </div>
                <div class="card-content">
                    <span class="card-title activator">{{eventTitle}}
                        <i class="material-icons">more_vert</i>
                    </span>
                    <p>
                        <!-- add activator to anything -->
                        <a href="/events/details/{{_id}}">Read more</a><br> Date: {{formatDate eventDate day="numeric"
                        month="long"
                        year="numeric"}} {{eventTime}}
                    </p>
                </div>
                <!-- inside of reveal -->
                <div class="card-reveal">
                    <span class="card-title">{{eventTitle}}
                        <i class="material-icons">close</i>
                    </span>

                    Created by: {{user}} <br> Venue: {{eventVenue}} <br>
                    <p style="text-overflow:ellipsis;">{{eventDescription}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <h5 class="center-align">No events listed.</h5>
        {{/each}}
    </div>
</div>